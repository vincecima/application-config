description "{{ app_name }}"

start on (filesystem and net-device-up)
stop on runlevel [!2345]

setuid deployer
setgid deployer

respawn
respawn limit 2 60

chdir /var/app/{{ app_name }}

script
  exec {{ script_command }} >> /var/log/app/{{ app_name }}.log 2>&1
end script

emits {{ app_name }}-running
